<Window x:Class="IntWarsLauncher.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntWarsLauncher"
        mc:Ignorable="d"
        Title="SplashScreen" Height="300" Width="535" ResizeMode="NoResize" Topmost="True" WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF16443D"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="79" Margin="20,2,0,0" TextWrapping="Wrap" Text="IntWars Launcher" VerticalAlignment="Top" Width="494" FontFamily="Hot Mustard BTN" FontSize="48"/>
        <ProgressBar HorizontalAlignment="Left" Height="26" Margin="10,259,0,0" VerticalAlignment="Top" Width="515" Background="Transparent" BorderBrush="Transparent"/>
    </Grid>
</Window>
